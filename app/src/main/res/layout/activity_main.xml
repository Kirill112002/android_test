<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dota_background"
            android:orientation="horizontal"
            android:padding="50dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/back"
                android:padding="20dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:background="@drawable/menu" />

        </LinearLayout>

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="50dp"
            android:textColor="@color/material_dynamic_neutral_variant60"
            android:textSize="30sp"
            android:layout_gravity="left"
            android:text='@string/dota_2_is_a_multiplayer_online_battle_arena_moba_game_which_has_two_teams_of_five_players_compete_to_collectively_destroy_a_large_structure_defended_by_the_opposing_team_known_as_the_ancient_whilst_defending_their_own' />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:text="@string/review_amp_ratings"/>

        <LinearLayout
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textSize="100sp"
                android:text="@string/_4_9"/>

            <LinearLayout
                android:id="@+id/review_rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/review_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/star"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/count_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="35dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/material_dynamic_neutral70"
                    android:textSize="25sp"
                    android:text="70M Reviews"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/review1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reviewer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingStart="30dp"
                    android:src="@drawable/avatar1"/>
                <LinearLayout
                    android:id="@+id/reviewer1_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="35dp"
                        android:textColor="@color/material_dynamic_neutral100"
                        android:textSize="45sp"
                        android:text="Auguste Conte"/>

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="35dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/material_dynamic_neutral70"
                        android:textSize="25sp"
                        android:text="February 14, 2019"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/review_comment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:textColor="@color/material_dynamic_neutral_variant70"
                android:textSize="30sp"
                android:layout_gravity="left"
                android:text='“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”' />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/review2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reviewer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingStart="30dp"
                    android:src="@drawable/avatar2"/>
                <LinearLayout
                    android:id="@+id/reviewer2_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="35dp"
                        android:textColor="@color/material_dynamic_neutral100"
                        android:textSize="45sp"
                        android:text="Jang Marcelino"/>

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="35dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/material_dynamic_neutral70"
                        android:textSize="25sp"
                        android:text="February 14, 2019"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/review_comment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:textColor="@color/material_dynamic_neutral_variant70"
                android:textSize="30sp"
                android:layout_gravity="left"
                android:text='“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”' />
        </LinearLayout>
        <Button
            android:id="@+id/buttonCopy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Install"

            android:background="@color/yellow"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <!-- Место для верстки -->

</androidx.constraintlayout.widget.ConstraintLayout>